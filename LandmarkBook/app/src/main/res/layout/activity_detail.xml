<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="277dp"
        android:layout_height="227dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="19dp"
        app:layout_constraintBottom_toTopOf="@+id/LandMarkNameText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/LandMarkNameText"
        android:layout_width="166dp"
        android:layout_height="0dp"
        android:layout_marginBottom="31dp"
        android:gravity="center"
        android:hint="LandMark name"
        android:text="Land Mark Name"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/CountyNameText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/CountyNameText"
        android:layout_width="166dp"
        android:layout_height="0dp"
        android:layout_marginBottom="154dp"
        android:gravity="center"
        android:text="Country Name"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LandMarkNameText" />

</androidx.constraintlayout.widget.ConstraintLayout>